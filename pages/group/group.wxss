/* pages/new/new.wxss */
@import '/image/iconfont/iconfont.wxss';
@import '/image/public/common.wxss';

/*消息*/

.tab-content {
  background: #fff;
}

.search-bg {
  width: 100%;
  background: #eee;
  padding: 8rpx 0;
}

.search-wrapper {
  width: 90%;
  line-height: 60rpx;
  margin: 20rpx auto;
  position: relative;
  overflow: hidden;
}

.search {
  background: #fff;
  border-radius: 50rpx;
  line-height: 22px;
  padding: 0 40rpx 0 100rpx;
  box-sizing: border-box;
  color: #333;
  text-align: left;
  font-size: 32rpx;
  height: 72rpx;
  vertical-align: middle;
}

.search-icon {
  width: 60px;
  height: 60rpx;
  position: absolute;
  font-size: 36rpx;
  top: 4rpx;
  left: 2rpx;
  z-index: 222;
  color: #ccc;
}

/* 点赞 评论 @我的 */

.my-msg {
  display: flex;
  padding: 26rpx 0;
  border-bottom: 2px solid #eee;
}

.icon-item {
  flex: 1;
}

.icon-item .iconfont {
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  font-size: 60rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.icon-iten-cont {
  font-size: 32rpx;
  margin-top: 20rpx;
}

.dz-color {
  background: #ff4721;
}

.pl-color {
  background: skyblue;
}

.me-color {
  background: rgb(152, 152, 218);
}

.msg-list {
  width: 100%;
  margin-top: 20rpx;
}

.msg-item {
  width: 100%;
  height: 120rpx;
  padding: 12rpx 0;
  border-bottom: 1px solid rgb(243, 240, 240);
  clear: both;
}

.msg-left {
  width: 160rpx;
  padding-left: 15rpx;
  float: left;
  box-sizing: border-box;
  height: 100%;
}

.msg-left-pic {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.msg-right {
  margin-left: 140rpx;
  text-align: left;
  padding-left: 30rpx;
  box-sizing: border-box;
  height: 100%;
}

.msg-user {
  font-size: 34rpx;
}

.msg-content {
  font-size: 30rpx;
  margin-top: 12rpx;
  color: rgb(204, 203, 203);
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 96%;
}

/* 好友 */

.my-friends {
  height: 56rpx;
  text-align: left;
  line-height: 56rpx;
  margin-top: 30rpx;
  padding-left: 30rpx;
  position: relative;
}

.friends-tit {
  margin-left: 20rpx;
}

.friends-num {
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
  color: #ccc;
}

/* 群组 */

.msg-member {
  padding-right: 28rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #111;
}
.tips-content{
  font-size: 26rpx;
  color: #ccc;
}
