/* pages/publish/publish.wxss */
.body{
  padding:0 20rpx;
}
.submit-tit{
  color: #222;
  padding: 6rpx 0;

}
.textarea{
  border: 2rpx solid #ccc;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex: 1;
  border-radius: 8rpx;
  margin-top:20rpx;
  padding:12rpx;
}

.protocol{
  font-size: 32rpx;
  padding: 20rpx 0;  
  height: 30rpx;
  line-height: 30rpx;
  text-align: right;
}

.agree{
  vertical-align: middle;
}



.img-list{
  width:100%;
  margin-top: 32rpx;
}
.img-item{
  width:25%;
  height:187rpx;
  padding:8rpx;
  box-sizing:border-box;
  display:inline-block;
  position: relative;
}
/*选择的图片*/
.img-pic{
  width: 100%;
  height:100%;
}
/*删除图片*/
.del-pic{
  width:37rpx;
  height:37rpx;
  position:absolute;
  background:#ccc;
  top:-3rpx;
  right:-1rpx;
  color:#eee;
  text-align:center;
  line-height:30rpx;
  border-radius:50%;
  z-index: 222;
  background: url('data:image/png;base64,') center center rgb(122, 84, 84) no-repeat

}

/* 发布按钮 */
.send{
  padding: 32rpx 40rpx
}