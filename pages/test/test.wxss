/* 微信授权 */
.modal-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  top: 0rpx;
  width: 100%;
  height: 100%;
}
 
.modal-content {
  background: #fff;
  width: 600rpx;
  margin: 40% auto 0;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ebebec;
}
 
.content-title {
  height: 100rpx;
  text-align: center;
  font-size: 1.2rem;
  padding-top: 10rpx;
}
 
.content-text {
  padding: 0 50rpx 50rpx;
}
 
.modal-btns {
  width: 600rpx;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
}
 
.dialog-btn {
  border-radius: 0;
  background: #fff;
  height: 100rpx;
  width: 100%;
}
 
.dialog-btn::after {
  border: none;
  border-radius: 0;
}
 
.cancel {
  color: #ccc;
}
 
.confirm {
  border-left: 1px solid #ebebec;
  color: #60d048;
}

.active-list {
  padding: 20rpx;
  margin-top: 20rpx;
  background: #fff;
}

.active-header {
  width: 100%;
  clear: both;
  position: relative;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.header-user {
  float: left;
  vertical-align: middle;
  border-radius: 50%;
  overflow: hidden;
}

.header-user-img {
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
}

.user-info {
  float: left;
  color: #333;
  padding-left: 20rpx;
}

.user-info-name {
  font-size: 40rpx;
}

.user-info-time {
  font-size: 24rpx;
}

/*+关注*/

.follow-me {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  border: 1Px solid #ff2741;
  color: #ff2741;
  width: 96rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  text-align: center;
}

.item-tit {
  font-size: 30rpx;
  word-break: break-all;
  word-wrap: break-word;
  text-align: justify; /*两端对齐*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3; /*3行隐藏*/
  -webkit-box-orient: vertical;
  color: #333;
  margin-bottom: 10px;
}

/*图片样式*/

.item-img {
  font-size: 0;
  line-height: 1;
  display: inline-block;
  padding: 0 2px 2px 0;
  margin: 0 !important;
  box-sizing: border-box;
}

.img-width1 {width: 375px;}
.img-width2 {width: 187.5px;}
.img-width3 {width: 125px;}

.item-img-cell {
  display: inline-block;
  position: relative;
  padding-bottom: 100%;
  width: 100%;
  height: 0;
  max-width: 100%;
  background-color: #f4f5f6;
}

.item-img-pic {
  cursor: pointer;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50%;
  position: absolute;
  width: 100%;
  height: 100%;
}

/* 视频 */
.video{
  width: 375px;
}

.show{
   display:show;
}
.hide{
   display:none;
}

/* 搜索框 */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}
.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}
.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #DC3C24;
  white-space: nowrap;
}
