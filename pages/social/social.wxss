.containner {
  overflow: hidden;
  background: #fff;
  margin-bottom: 40rpx;
}

.soc-header {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.soc-search {
  flex: 1;
  position: relative;
}

.soc-search::after {
  position: absolute;
  right: 28rpx;
  top: 14rpx;
  content: " ";
  display: block;
  height: 40rpx;
  width: 40rpx;
  background: url(https://img3.doubanio.com/f/shire/f71f15922ebd7c0ff0ea0e7a25577529efd8981a/pics/icon/bn_srh_1.png) no-repeat;
  background-size: 100%;
}

.soc-search {
  flex: 1;
}

.soc-input {
  border: 2rpx solid #ccc;
  outline: none;
  height: 50rpx;
  border-radius: 50rpx;
  padding: 4rpx 80rpx 4rpx 30rpx;
}

.soc-head-add {
  position: relative;
  width: 120rpx;
  height: 96rpx;
}

.soc-head-add::after {
  position: absolute;
  right: 40rpx;
  top: 24rpx;
  content: " ";
  display: block;
  height: 50rpx;
  width: 50rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100%;
}

/* 加入 */

.soc-join-item {
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin: 30rpx 20rpx 0;
  padding: 10rpx 20rpx;
  box-shadow: 2rpx 2rpx 6rpx 3rpx rgba(97, 97, 97, 0.2);
  border-radius: 10rpx;
  position: relative;
}

.soc-group-info {
  overflow: hidden;
  width: 75%;
}

.soc-join-tit {
  font-size: 30rpx;
  color: #919090;
}

.soc-join-my {
  font-size: 30rpx;
  color: #323232;
}

.soc-join-num {
  font-size: 50rpx;
  color: #f00;
}

.soc-join-add {
  position: relative;
  padding-right: 40rpx;
}

.soc-join-item::after {
  position: absolute;
  top: 32rpx;
  right: 16rpx;
  content: " ";
  display: block;
  height: 32rpx;
  width: 32rpx;
  background: url('data:image/png;base64,')no-repeat;
  background-size: 100%;
}

.soc-join-more {
  color: #f00;
  font-size: 28rpx;
}

/*推荐*/

.soc-recommend {
  margin: 30rpx 20rpx 0;
  box-shadow: 0rpx 0rpx 2rpx 1rpx rgba(97, 97, 97, 0.2);
}

.soc-recommend:last-child {
  box-shadow: none;
}

.soc-recommend-pro {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding: 30rpx 20rpx;
  font-size: 26rpx;
  color: #323232;
}

.soc-recomend-change {
  padding: 10rpx 0rpx 10rpx 40rpx;
  position: relative;
  color: #f00;
}

.soc-recomend-change::after {
  position: absolute;
  top: 8rpx;
  left: 0rpx;
  content: " ";
  display: block;
  height: 40rpx;
  width: 40rpx;
  color: #f00;
  background: url('https://gss0.bdstatic.com/5eR1dDebRNRTm2_p8IuM_a/resource/tuijian/widget/coolsitefeed/img/refresh.2b6c4a5.png') no-repeat;
  background-size: 100%;
}

/* 问答列表 */

.soc-list {
  width: 100%;
}

.soc-wapper {
  padding: 14px 26rpx;
  padding-bottom: 12px;
  background: #fff;
  margin-bottom: 12rpx;
}

.soc-item {
  height: 100rpx;
  overflow: hidden;
  position: relative;
  padding: 40rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}

.soc-avater, .soc-user {
  float: left;
}

.soc-avater {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.soc-user {
  margin-left: 20rpx;
}

.soc-join-name {
  color: #262625;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.soc-user-info {
  font-size: 32rpx;
  color: #6e6767;
}

.soc-txt {
  margin-right: 32rpx;
}

.clo {
  color: #ff2741;
}

.soc-img {
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: middle;
}

.soc-detail {
  color: #919090;
  font-size: 28rpx;
}

.soc-add {
  position: absolute;
  top: 60rpx;
  right: 20rpx;
  padding-left: 50rpx;
  padding-right: 26rpx;
  font-size: 32rpx;
  color: #ff2741;
  border: 2rpx solid #ff2741;
  text-align: center;
  line-height: 40rpx;
  border-radius: 46rpx;
  height: 46rpx;
}

.soc-add::after {
  content: '+';
  position: absolute;
  top: -2rpx;
  left: 4rpx;
  font-size: 40rpx;
  color: #ff2741;
  width: 46rpx;
  height: 46rpx;
}
