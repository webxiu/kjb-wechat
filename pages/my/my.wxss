/**my.wxss**/
@import '/image/iconfont/iconfont.wxss';
/* 引入列表公共样式 */
@import '/image/public/optList.wxss';

.body {
  background: #eee;
  border-top: 1px solid #ccc;
}
/* 授权弹窗 开始*/
.modal-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index:999999;

}
 
.modal-content {
  background: #fff;
  margin: 40% auto 0;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ebebec;
}
 
.content-title {
  height: 100rpx;
  line-height:100rpx;
  text-align: center;
  font-size: 1.2rem;
  padding-top: 10rpx;
}
 
.content-text {
  padding: 0 50rpx 50rpx;
  font-size:36rpx;
  line-height:54rpx;

}
 
.modal-wrap {
  width: 80%;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
}
 
.dialog-btn {
  border-radius: 0;
  background: #fff;
  height: 100rpx;
  width: 100%;
}
 
.dialog-btn::after {
  border: none;
  border-radius: 0;
}
 .weui-flex{
   display: flex;
 }
 .weui-flex__item{
   width:50%;
 }
.cancel {
  color: #ccc;
}
 
.confirm {
  border-left: 1px solid #ebebec;
  color: #60d048;
}
/* 授权弹窗 结束 */

/* 我的 */
.my-item{
  height: 120rpx;
  padding: 30rpx;
  clear: both;
  position: relative;
  background: #fff;
  overflow:hidden;

}
.my-left {
  width: 160rpx;
  float: left;
  box-sizing: border-box;
  height: 100%;
}
.my-left-pic {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.my-right {
  margin-left: 140rpx;
  text-align: left;
  padding-left: 0rpx;
  box-sizing: border-box;
  height: 100%;
}
.my-user {
  font-size: 32rpx;
}
.my-content {
  font-size: 30rpx;
  margin-top: 12rpx;
  color: rgb(184, 175, 175);
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 96%;
}
/* 签到 */
.sign-in{
  position: absolute;
  right:-34rpx;
  top:34rpx;
  background: #f00;
  color: #fff;
  border-radius: 32rpx;
  padding: 4rpx 50rpx;
  height: 56rpx;
  line-height:56rpx;
  vertical-align: middle;
  font-size: 32rpx;
}
.cate{
  display: flex;
  flex-direction: row;
    background: #fff;
}
.cate-item{
   flex: 1;
   text-align: center;
  padding: 10rpx 0 26rpx 0;
}
.cate-num{
  font-size: 32rpx;
  color: #333;
  line-height: 42rpx;
}
.cate-cate{
  margin-top: 10rpx;
  font-size: 34rpx;
  color: #bbb;
}
.collect{
  margin-top: 20rpx;
  padding-top: 10rpx;
}

/* 分类 */

.cate-list {
  padding: 10rpx;
  overflow: hidden;
  background: #fff;
  clear: both;
  margin-top: 20rpx;
}

.cate-item {
  width: 25%;
  float: left;
  display: block;
  text-align: center;
  margin: 5rpx 0;
}

.cate-icon {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.cate-title {
  color: gray;
  text-align: center;
  padding: 8rpx 0;
  font-size: 28rpx;
}
/*列表*/
.my-group {
  border-bottom: 1px solid #eee;
  }
.my-group:last-child {
  border: none;
  }
/* 退出 */

.exit {
  width:100%;
  background: #fff;
  margin-top:20rpx;
  padding-top:40rpx;
}

.exit-btn {
  width: 90%;
  background: #e4636d;
  border-radius: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  margin: 0 auto 120rpx;
}
